<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 🌙 تم اصلی برنامه -->
    <style name="Theme.AsamApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/Medium_Purple_500</item>
        <item name="colorPrimaryVariant">@color/Medium_Purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/Medium_Purple_500</item>
        <item name="colorSecondaryVariant">@color/Medium_Purple_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Remove Action Bar and Title -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 🟪 تم تمام‌صفحه بدون نوار بالا برای MainActivity -->
    <style name="Theme.AsamApp.NoActionBarFullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- 🚀 تم اسپلش اسکرین با رنگ بنفش -->
    <style name="Theme.AsamApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#8a86ff</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
